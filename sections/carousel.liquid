<style>
[x-cloak] { display: none !important; }

.carousel-bg-hero {
  background: linear-gradient(0deg, #082024 0%, #10343B 100%);
}
.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
}

.carousel-card-hero {
  background: #fff;
  border-radius: 1.25rem;
  box-shadow: 0 4px 24px 0 rgba(8,32,36,0.16);
  border: 2px solid #d4af37;
  transition: box-shadow 0.3s, border 0.3s, transform 0.25s;
  position: relative;
  z-index: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  min-height: 340px;
}
.carousel-card-hero:hover {
  border-color: #f4d03f;
  box-shadow: 0 12px 40px 0 rgba(212,175,55,0.17), 0 6px 32px 0 rgba(16,52,59,0.18);
  transform: scale(1.04);
  z-index: 2;
}
.carousel-card-img-wrap {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 1.25rem;
  overflow: hidden;
  z-index: 0;
}
.carousel-card-img {
  object-fit: cover;
  width: 100%;
  height: auto;
  max-height: calc(100vh - 200px);
  border-radius: 1.25rem;
  display: block;
}
.carousel-card-title-overlay {
  position: absolute;
  left: 0; right: 0; bottom: 0;
  padding: 1.25rem 1rem 1.25rem 1.25rem;
  background: linear-gradient(0deg, rgba(8,32,36,0.78) 0%, rgba(8,32,36,0.0) 100%);
  color: #fff;
  font-weight: bold;
  font-size: 1.3rem;
  border-bottom-left-radius: 1.25rem;
  border-bottom-right-radius: 1.25rem;
  z-index: 2;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  min-height: 74px;
}
.plus-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 2.5rem;
  height: 2.5rem;
  background: #10343B;
  border-radius: 9999px;
  box-shadow: 0 2px 8px rgba(8,32,36,0.13);
  border: 2px solid #d4af37;
  transition: transform 0.2s, border 0.2s, background 0.25s;
  margin-left: 1rem;
}
.plus-btn svg {
  width: 20px;
  height: 20px;
  stroke: #d4af37;
}
.plus-btn:hover {
  transform: scale(1.1);
  border-color: #f4d03f;
  background: #082024;
}
.carousel-dot {
  width: 0.75rem;
  height: 0.75rem;
  border-radius: 9999px;
  background: #10343B;
  border: 2px solid #d4af37;
  transition: background 0.2s, border 0.2s, transform 0.2s;
}
.carousel-dot-active {
  background: #d4af37;
  border-color: #d4af37;
  transform: scale(1.25);
  box-shadow: 0 0 0 2px #082024, 0 2px 8px 0 rgba(212,175,55,0.125);
}
.carousel-arrow {
  background: #082024cc;
  border-radius: 9999px;
  border: 2px solid #d4af37;
  color: #d4af37;
  transition: background 0.2s, color 0.2s;
}
.carousel-arrow:disabled {
  opacity: 0.6;
  pointer-events: none;
}
.carousel-arrow:hover {
  background: #d4af37;
  color: #082024;
}
.hero-modal-bg {
  background: rgba(8,32,36,0.90);
  backdrop-filter: blur(2px);
}

/* --- Modal Responsive & Polish --- */

/* Responsive font sizes */
.modal-modal-title {
  font-size: clamp(1.5rem, 4vw, 2.3rem);
  font-weight: 700;
  line-height: 1.17;
  margin-bottom: 1rem;
  color: #111;
  letter-spacing: -0.01em;
  text-align: left;
}
.modal-modal-desc {
  font-size: clamp(1rem, 3.2vw, 1.15rem);
  font-weight: 400;
  line-height: 1.4;
  margin-bottom: 1.8rem;
  color: #444;
  text-align: left;
}
.modal-spotlight-text {
  font-size: clamp(0.95rem, 2.8vw, 1rem);
  font-style: italic;
  color: #666;
  margin-bottom: 0.7rem;
  text-align: left;
}

/* Modal quote box */
.bg-spotlight {
  background: #f4f4f4;
  border-radius: 1rem;
  padding: 1.2rem 1.4rem;
  margin-bottom: 1.5rem;
}
.modal-spotlight-title {
  font-size: var(--modal-spotlight-title-size, 1.08rem);
  font-weight: 600;
  color: #555;
  margin-bottom: 0.4rem;
  text-align: left;
}
.modal-spotlight-author {
  font-size: var(--modal-spotlight-author-size, .92rem);
  color: #aaa;
  text-align: left;
}
.modal-secondary-image {
  margin-top: 1.5rem;
  border-radius: 1rem;
  box-shadow: 0 2px 12px rgba(16,52,59,0.11);
  max-width: 100%;
  height: auto;
  display: block;
}

/* Mobile Polish */
@media (max-width: 767px) {
  .modal-right-content {
    background-color: #f8f9fb;
    padding: 1.25rem !important;
  }
  .modal-container {
    padding: 0 !important;
    border-radius: 1rem !important;
  }
}

/* Modal right font and sizing (desktop base) */
.modal-right-content {
  font-family: 'Inter', 'Roboto', 'Arial', sans-serif;
  color: #222;
  overflow-y: auto;
  max-height: 80vh;
  padding: 2.5rem;
}

/* Modal container for swipe and rounding */
.modal-container {
  width: 100%;
  max-width: 900px;
  min-height: 400px;
  background: #fff;
  border-radius: 1.25rem;
  box-shadow: 0 8px 40px 0 rgba(16,38,54,0.18);
  display: flex;
  flex-direction: row;
  position: relative;
  overflow: hidden;
  animation: slideInUpModal 0.45s cubic-bezier(.23,1.02,.52,.99);
}

@media (max-width: 1023px) {
  .modal-container { flex-direction: column; }
  .modal-right-content { padding: 1.5rem !important; }
}
@media (max-width: 700px) {
  .modal-container { max-width: 100vw !important; }
  .modal-modal-title { font-size: clamp(1.05rem, 6vw, 1.5rem) !important; }
  .modal-modal-desc { font-size: clamp(0.96rem, 4vw, 1rem) !important; }
}

@keyframes slideInUpModal {
  from { opacity: 0; transform: translateY(60px) scale(0.98);}
  to { opacity: 1; transform: translateY(0) scale(1);}
}
.animate-slideInUp { animation: slideInUpModal 0.45s cubic-bezier(.23,1.02,.52,.99); }

</style>



