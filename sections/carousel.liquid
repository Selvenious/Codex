                      loading="lazy"
                      :aria-label="feature.title || 'Carousel card image'"
                    />
                    <div class="carousel-card-title-overlay">
                      <span x-text="feature.title"></span>
                      <button class="plus-btn" aria-label="See More" @click="openModal(i)">
