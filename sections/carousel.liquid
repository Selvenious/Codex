        tabindex="-1"
        role="dialog"
        aria-modal="true"
        @keydown.escape.window="closeModal"
        @click.self="closeModal"
        x-ref="modalOverlay"
        x-trap="modalOpen"
      >
        <template x-if="modalIdx !== null && features[modalIdx]">
          <div
            class="modal-container animate-slideInUp"
            @click.away="closeModal"
            x-show="modalOpen"
            tabindex="0"
            x-ref="modalContainer"
          >
